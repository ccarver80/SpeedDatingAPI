// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 
// *************USER SECTION ************
//

model User {
  rec_id     Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  email      String   @unique
  is_paid    Boolean  @default(false)
  opt_in     Boolean  @default(false)
  location   String?  @default("No Location yet.")
  bio        String?  @default("No bio yet.") //@db.VarChar(1000)
  hobbies    String?  @default("No hobbies yet.") //@db.VarChar(1000)
  profilePic String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  genderId   Int
  gender     Gender   @relation(fields: [genderId], references: [rec_id])
  seekingId  Int
  seeking    Seeking  @relation(fields: [seekingId], references: [rec_id])
  socketId   String?  @unique
  Room       Room?    @relation(fields: [roomRec_id], references: [rec_id])
  roomRec_id Int?
}

model Gender {
  rec_id Int    @id @default(autoincrement())
  name   String @unique
  users  User[]
}

model Seeking {
  rec_id Int    @id @default(autoincrement())
  name   String @unique
  users  User[]
}

// ############ ROOM SECTION ##################

model Room {
  rec_id           Int    @id @default(autoincrement())
  room_name        String
  room_description String
  room_zipcode     String
  room_city        String
  room_state       String
  room_country     String
  users            User[]
  spots_availble   Int    @default(10)
  male_users       Int    @default(0)
  female_users     Int    @default(0)
}
